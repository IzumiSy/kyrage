{
  "name": "@izumisy/kyrage",
  "private": false,
  "type": "module",
  "version": "0.4.0",
  "description": "A minimal, schema-based declarative migration tool for Node.js ecosystem",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "kyrage": "./dist/main.js"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit --incremental --pretty",
    "test": "vitest run"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "c12": "^3.2.0",
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "kysely": "^0.28.4",
    "kysely-codegen": "^0.18.5",
    "mysql2": "^3.14.3",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@testcontainers/postgresql": "^11.5.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "memfs": "^4.36.0",
    "prettier": "^3.6.2",
    "testcontainers": "^11.5.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
